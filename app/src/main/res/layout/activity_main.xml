<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgtroca"
        android:layout_width="220dp"
        android:layout_height="361dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/shawn" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Trocador de Fotos"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnShawn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shawn"
        app:layout_constraintBottom_toBottomOf="@+id/btnRhys"
        app:layout_constraintEnd_toStartOf="@+id/btnRhys"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnRhys" />

    <Button
        android:id="@+id/btnRhys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rhys"
        app:layout_constraintBottom_toBottomOf="@+id/btnBunda"
        app:layout_constraintEnd_toStartOf="@+id/btnBunda"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnShawn"
        app:layout_constraintTop_toTopOf="@+id/btnBunda"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnBunda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Bunda da America"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnRhys"
        app:layout_constraintTop_toBottomOf="@+id/imgtroca" />
</androidx.constraintlayout.widget.ConstraintLayout>